{
  "raidLevel": 0,
  "diskPaths": ["/mnt/disk1", "/mnt/disk2"],
  "diskCapacity": "1TB",
  "stripeSize": "128KB",
  "stripeAlignment": true,
  "readAhead": true,
  "writeBackCache": true,
  "ioScheduler": "cfq",
  "autoRebuild": true,
  "rebuildPriority": "high",
  "hotSpareDisks": ["/mnt/spare1"],
  "diskHealthCheckInterval": "1h",
  "sendAlertsOnFailure": true,
  "alertEmail": "admin@example.com",
  "metadataVersion": "1.0",
  "writePolicy": "write-back"
}
